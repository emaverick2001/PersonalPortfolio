---
import { Page } from "@components/Page"
import { PageHeader } from "@components/PageHeader.tsx"
import SiteLayout from "@layouts/SiteLayout.astro"
import { getCollection } from "astro:content"
const posts = (await getCollection("blog")).sort(
  (postA, postB) => +postB.data.publishDate - +postA.data.publishDate
)
const formatter = new Intl.DateTimeFormat("en", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
  timeZone: "UTC",
})
---

<SiteLayout title="Blog">
  <PageHeader>Posts</PageHeader>
  <div class="border-t-4 border-gray-200 mb-6" />
  <Page>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}/`}
            class="group flex flex-col overflow-hidden rounded-lg bg-white shadow-sm transition duration-300 hover:shadow-lg hover:-translate-y-1"
          >
            <!-- Featured Image -->
            {post.data.image ? (
              <img src={post.data.image} alt={post.data.title} class="h-48 w-full object-cover" />
            ) : (
              <div class="h-48 w-full bg-gradient-to-br from-blue-200 to-blue-600" />
            )}

            <!-- Content -->
            <div class="flex flex-1 flex-col p-6">
              <!-- Category Badges -->
              <div class="mb-3 flex flex-wrap gap-2">
                {(post.data.categories || ["Reflection"]).map((cat: string) => (
                  <span class="inline-block rounded-full bg-purple-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-purple-700">
                    {cat}
                  </span>
                ))}
              </div>

              <!-- Title -->
              <h2 class="mb-3 text-xl font-bold text-gray-900 transition-colors duration-200 group-hover:text-purple-600 leading-tight">
                {post.data.title}
              </h2>

              <!-- Description -->
              {post.data.description && (
                <p class="mb-4 flex-1 text-sm leading-relaxed text-gray-600">
                  {post.data.description}
                </p>
              )}

              <!-- Date -->
              <time class="text-xs font-medium uppercase tracking-wide text-gray-400">
                {formatter.format(post.data.publishDate)}
              </time>
            </div>
          </a>
        ))
      }
    </div>
  </Page>
</SiteLayout>
