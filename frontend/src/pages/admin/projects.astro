---
import AdminLayout from "@layouts/AdminLayout.astro"
---

<AdminLayout title="Projects">
  <div class="space-y-4">
    <div>
      <p class="text-xs uppercase tracking-[0.35em] text-zinc-500">Admin</p>
      <h1 class="text-3xl font-semibold tracking-tight text-white">Projects</h1>
      <p class="mt-2 text-sm text-zinc-400">
        Track project status, highlight wins, and update visuals.
      </p>
    </div>

    <div class="rounded-2xl border border-dashed border-zinc-700 bg-zinc-950/50 p-6 text-sm text-zinc-400">
      Connect your project collection here.
    </div>
  </div>
</AdminLayout>
