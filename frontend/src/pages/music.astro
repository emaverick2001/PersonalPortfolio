---
import SiteLayout from "@layouts/SiteLayout.astro"
import PerformanceDisplay from "@components/PerformanceDisplay.astro"
import { PageHeader } from "@components/PageHeader.tsx"
import { music } from "src/content/music"
---

<SiteLayout title="Music">
  <PageHeader>Music</PageHeader>
  <div class="mb-6 border-t-4 border-black dark:border-zinc-200 rounded-lg"></div>
  <div class="grid gap-4 md:grid-cols-2">
    {music.map((performance) => <PerformanceDisplay {performance} />)}
  </div>
</SiteLayout>
