---
import Head from "@components/Head.astro"
import { UserButton } from "@clerk/astro/react"

const title = Astro.props.title ? `${Astro.props.title} | Admin` : "Admin"
const description = Astro.props.description ?? "Admin dashboard"
const navItems = [
  { label: "Dashboard", href: "/admin/" },
  { label: "Blog Posts", href: "/admin/blogposts/" },
  { label: "Projects", href: "/admin/projects/" },
  { label: "Music", href: "/admin/music/" },
  { label: "Geography", href: "/admin/geography/" },
]
---

<!doctype html>
<html lang="en">
  <head>
    <Head {title} {description} />
  </head>
  <body class="min-h-screen bg-zinc-950 text-zinc-100">
    <div class="border-b border-zinc-800 bg-zinc-950/70 backdrop-blur">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <div>
          <p class="text-xs uppercase tracking-[0.35em] text-zinc-400">Admin</p>
          <p class="text-lg font-semibold tracking-tight">Maverick Espinosa</p>
        </div>
        <UserButton client:load />
      </div>
    </div>

    <div class="mx-auto grid max-w-6xl gap-6 px-6 py-8 md:grid-cols-[220px_1fr]">
      <aside class="rounded-2xl border border-zinc-800 bg-zinc-900/60 p-4">
        <p class="mb-3 text-xs uppercase tracking-[0.3em] text-zinc-500">Navigation</p>
        <nav class="flex flex-col gap-2 text-sm">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="rounded-lg px-3 py-2 text-zinc-200 transition hover:bg-zinc-800 hover:text-white"
            >
              {item.label}
            </a>
          ))}
        </nav>
      </aside>

      <main class="rounded-2xl border border-zinc-800 bg-zinc-900/40 p-6">
        <slot />
      </main>
    </div>
  </body>
</html>
