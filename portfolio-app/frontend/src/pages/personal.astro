import SiteLayout from "@layouts/SiteLayout.astro"
import { Page } from "@components/Page";
import { PageHeader } from "@components/PageHeader.tsx"
import { Link } from "@components/Link"
---

<SiteLayout title="Personal">
  <PageHeader>Personal</PageHeader>
  <div class="border-t-4 border-gray-200 mb-6" />
  <Page>
    <div class="flex items-center gap-14">
      <div>
        <h2 class="mb-2 font-sans text-xl font-bold tracking-tight">Background</h2>
        <p class="mb-3">
          I’m <strong>Maverick Espinosa</strong>, a builder from Phoenix born in Dallas—curious, process-driven, and happiest when I’m turning messy data into clear, useful systems. I earned my B.S. in Computer Science at Johns Hopkins and I’m now pursuing my M.S. (MCS) at the University of Illinois Urbana-Champaign as a <Link href="https://www.gemfellowship.org/2025-gem-fellows/"><strong>GEM Employer Fellow</strong></Link>.
        </p>
        <p class="mb-4">
          My work sits at the intersection of <strong>data engineering</strong>, <strong>information retrieval</strong>, and <strong>learning tools</strong>. At Johns Hopkins CPCR I’ve automated REDCap-based reporting and built pipelines that harmonize research data. At APL, I’ve supported ingestion and analysis for autonomous vessels/telemetry workflows. Lately I’ve been building a lightweight <strong>search engine + data catalog</strong> to make research data discoverable and trustworthy.
        </p>
      </div>
